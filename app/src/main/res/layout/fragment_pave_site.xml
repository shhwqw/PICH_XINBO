        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView
                android:id="@+id/cv_nianya"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@color/material_green_100"
                card_view:cardCornerRadius="@dimen/card_Corner_Radius">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/bgblue2"
                    android:gravity="center_horizontal"
                    android:paddingTop="20dp"
                    android:text="终压温度"
                    android:textSize="20sp"
                    android:textColor="@color/white"/>

                <ImageView
                    android:id="@+id/sgmenu_nianya"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:scaleType="fitCenter"
                    android:src="@drawable/sg22"/>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cv_pave_site"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="4dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@color/material_green_100"
                card_view:cardCornerRadius="@dimen/card_Corner_Radius">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/bggreen"
                    android:gravity="center_horizontal"
                    android:paddingTop="20dp"
                    android:text="摊铺温度"
                    android:textSize="20sp"
                    android:textColor="@color/white"/>

                <ImageView
                    android:id="@+id/sgmenu_tanpu"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:scaleType="fitCenter"
                    android:src="@drawable/sg44"/>

            </android.support.v7.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView
                android:id="@+id/cv_pave_speed"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@color/material_green_100"
                card_view:cardCornerRadius="@dimen/card_Corner_Radius">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/bggreen"
                    android:gravity="center_horizontal"
                    android:paddingTop="20dp"
                    android:text="摊铺速度"
                    android:textSize="20sp"
                    android:textColor="@color/white"/>

                <ImageView
                    android:id="@+id/sgmenu_nianya_speed"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:scaleType="fitCenter"
                    android:src="@drawable/sg11"/>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cv_nianya_speed"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="4dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@color/material_green_100"
                card_view:cardCornerRadius="@dimen/card_Corner_Radius">

                <TextView
                    android:id="@+id/tv_nianya_speed"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/bgblue2"
                    android:gravity="center_horizontal"
                    android:paddingTop="20dp"
                    android:text="碾压速度"
                    android:textSize="20sp"
                    android:textColor="@color/white"/>

                <ImageView
                    android:id="@+id/iv_nianya_speed"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:scaleType="fitCenter"
                    android:src="@drawable/sg44"/>

            </android.support.v7.widget.CardView>

        </LinearLayout>


    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>